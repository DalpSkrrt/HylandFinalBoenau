<%- include('partials/header'); %>
<div>
<% if (players.length > 0) { %>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Position</th>
                <th>Champion</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < players.length; i++) { %>
                <tr>
                    <td><%= players[i].id %></td>
                    <td><%= players[i].user_name %></td>
                    <td><%= players[i].position %></td>
                    <td><%= players[i].champion %></td>
                    <td>
                        <a href="/edit/<%= players[i].id %>" class="btn btn-sm btn-success">Edit</a>
                    </td>
                    <td>
                        <a href="/delete/<%= players[i].id %>" class="btn btn-sm btn-danger">Delete</a>

                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
<% } else { %>
    <p class="text-center">No players found.</p>
<% } %>
</div>
</div>
